    public void setFrame() {
        this.setDefaultCloseOperation(JFrame.DO_NOTHING_ON_CLOSE);
        Dimension d = new Dimension(30, 30);
        this.getContentPane().add(new Filler(d, d, d), BorderLayout.LINE_START);
        this.getContentPane().add(new Filler(d, d, d), BorderLayout.LINE_END);
        this.getContentPane().add(new Filler(d, d, d), BorderLayout.PAGE_START);
        this.getContentPane().add(new Filler(d, d, d), BorderLayout.PAGE_END);
        this.pack();
        setLocationRelativeTo(null);
        setTeclas(this.getContentPane());
    }

    private void setTeclas(Container contenedor) {
        Component[] componentes = contenedor.getComponents();
        for (Component c : componentes) {
            if (c instanceof Container) {
                setTeclas((Container) c);
            }
            c.addKeyListener(this);
        }
    }

    private void abrirConexion() {
        try {
            fich = new File(ruta);
            fos = new FileOutputStream(fich,true); //Abrimos el fichero en modo APPEND
            oos = new ObjectOutputStream(fos);
        } catch (FileNotFoundException ex) {
            Logger.getLogger(Ejercicio6_Fichero.class.getName()).log(Level.SEVERE, null, ex);
        } catch (IOException ex) {
            Logger.getLogger(Ejercicio6_Fichero.class.getName()).log(Level.SEVERE, null, ex);
        }
    }

    private void cerrarConexion() {
        try {
            if (fos != null) {
                fos.close();
            }
            if (oos != null) {
                oos.close();
            }
        } catch (IOException ex) {
            ex.printStackTrace();
        }
    }

